{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Raylib",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/game",
                "-I",
                "D:/libs/raylib-5.5/include",
                "-L",
                "D:/libs/raylib-5.5/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
